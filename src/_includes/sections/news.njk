{# News section: expects `section.items[]` with title, date, url #}
<section class="container my-5 news-section">
  <div class="row">
    <div class="col-12">
      <h2>Noticias</h2>
      <ul class="list-unstyled">
        {% for item in section.items %}
          <li class="mb-2">
            <a href="{{ item.url }}">{{ item.title }}</a>
            <small class="text-muted"> - {{ item.date }}</small>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
